mixin socialNetworks(insta, facebook, twitter, youtube)
    .ssnn-list
        a(href=""+insta): i.fa-brands.fa-instagram
        a(href=""+facebook): i.fa-brands.fa-facebook-square
        a(href=""+twitter): i.fa-brands.fa-twitter-square
        a(href=""+youtube): i.fa-brands.fa-youtube-square

mixin funInputs(idHolder,placeholder_txt,replaceTxtWith,icon)
    .form-input(id=idHolder+'__box', data-funinput-replacetext=replaceTxtWith)
        span.top-input-text= replaceTxtWith
        input(id=idHolder, type="text", name=idHolder, placeholder=placeholder_txt)
        i(class=icon)